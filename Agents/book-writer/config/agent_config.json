{
  "agent": {
    "name": "Book Writer Agent",
    "version": "1.0.0",
    "description": "Intelligenter Agent zur automatisierten Erstellung von BÃ¼chern"
  },
  "ai": {
    "providers": {
      "openai": {
        "model": "gpt-4",
        "maxTokens": 4000,
        "temperature": 0.7
      },
      "claude": {
        "model": "claude-2.1",
        "maxTokens": 4000,
        "temperature": 0.7
      }
    },
    "defaultProvider": "openai"
  },
  "imageGeneration": {
    "providers": {
      "midjourney": {
        "enabled": true,
        "quality": "premium"
      },
      "dalle3": {
        "enabled": true,
        "quality": "high"
      },
      "stablediffusion": {
        "enabled": true,
        "quality": "standard"
      }
    },
    "defaultProvider": "midjourney"
  },
  "scraping": {
    "sources": {
      "bundestag": {
        "enabled": true,
        "baseUrl": "https://www.bundestag.de"
      },
      "landtage": {
        "enabled": true,
        "baseUrl": "https://www.landtag.de"
      },
      "politikTalkshows": {
        "enabled": true,
        "sources": [
          "https://www.zdf.de/sendung/markus-lanz",
          "https://www.zdf.de/sendung/maybrit-illner",
          "https://www.daserste.de/information/talk/maischberger/videos/"
        ]
      }
    },
    "rateLimiting": {
      "delay": 2000,
      "maxRetries": 3
    }
  },
  "publishing": {
    "defaultMarkets": ["germany", "austria", "switzerland"],
    "contractTemplates": {
      "standard": "standard-publishing-agreement",
      "academic": "academic-publishing-agreement"
    }
  },
  "quality": {
    "minQualityScore": 0.8,
    "revisionThreshold": 0.7,
    "maxRevisionAttempts": 3
  },
  "communication": {
    "smtp": {
      "host": "smtp.example.com",
      "port": 587,
      "secure": false
    },
    "notifications": {
      "projectUpdates": true,
      "reviewRequests": true,
      "dealNegotiations": true,
      "publicationConfirmations": true
    }
  }
}